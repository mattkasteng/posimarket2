# Database
# Para desenvolvimento local com SQLite:
# DATABASE_URL="file:./dev.db"
# Para produção com MySQL (PlanetScale, Railway, etc.):
DATABASE_URL="mysql://username:password@host:port/database"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email (opcional - para verificação de email)
EMAIL_FROM="noreply@posimarket.com"
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"

# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Melhor Envio (Cálculo de Frete)
# Obtenha seu token em: https://melhorenvio.com.br/painel/gerenciar/tokens
# Para ambiente de testes/sandbox: https://sandbox.melhorenvio.com.br
MELHOR_ENVIO_TOKEN="your-melhor-envio-token"
MELHOR_ENVIO_SANDBOX="false"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="PosiMarket"
NEXT_PUBLIC_APP_DESCRIPTION="Marketplace educacional do Grupo Positivo"

# Security
GOOGLE_VERIFICATION_ID="your-google-verification-id"
YANDEX_VERIFICATION_ID="your-yandex-verification-id"
MFA_BACKUP_CODE_SALT="your-mfa-backup-salt"
API_KEY_HASH_SALT="your-api-key-hash-salt"
API_KEY_PREFIX="pmk"
API_KEY_LENGTH="40"
SECURITY_LOG_WEBHOOK="https://your-siem-endpoint.example.com/logs"
SECURITY_LOG_TOKEN="optional-bearer-token"
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
NEXT_PUBLIC_ENABLE_GOOGLE_SSO="false"
ADMIN_API_IP_ALLOWLIST="127.0.0.1,::1"
# Backup & DR
BACKUP_DIR="./backups"
BACKUP_RPO_MINUTES="60"
BACKUP_RTO_MINUTES="120"

# Analytics
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
NEXT_PUBLIC_HOTJAR_ID="your-hotjar-id"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# File Upload
NEXT_PUBLIC_UPLOAD_MAX_SIZE="10485760"
NEXT_PUBLIC_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# Email Templates
SENDGRID_API_KEY="your-sendgrid-api-key"
RESEND_API_KEY="your-resend-api-key"

# WebSocket (para notificações em tempo real)
PUSHER_APP_ID="your-pusher-app-id"
PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_CLUSTER="your-pusher-cluster"

# Redis (para cache e rate limiting)
REDIS_URL="redis://localhost:6379"

# Cloudinary (para upload de imagens)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"
